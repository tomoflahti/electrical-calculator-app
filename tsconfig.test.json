{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/__tests__/**/*"
  ]
}